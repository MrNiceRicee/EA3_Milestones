@model MinesweeperWebApp.Models.Board


<style>
    label {
        font-size: 12.5px;
        color: #000;
        opacity: .8;
        font-weight: 400;
    }

    h4 {
        font-size: 24px;
        font-weight: 600;
        color: #999999;
        opacity: .85;
    }

        h4 span {
            color: #333333;
        }

        h4.CenteredH4 {
            margin: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            color: white;
            -ms-transform: translate(-50%,-50%);
            transform: translate(-50%,-50%);
        }

    div.left:hover .extraContent {
        opacity: 1;
    }

    .extraContent {
        opacity: 0;
        color: rgba(255,255,255,.5);
        top: 60%;
        left: 5%;
        text-align: center;
        text-shadow: 1px 1px rgba(0,0,0,0.2);
        position: absolute;
        background: rgba(255,255,255,.1);
        min-width: 100px;
        border-radius: 100px;
        padding: 12px 16px;
        z-index: 1;
        transition: all .6s ease-in-out;
    }

    .introduction {
        color: #999999;
    }

    .maindiv {
        margin: 0;
        top: 50%;
        left: 50%;
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        position: absolute;
        display: flex;
        flex-direction: row;
        width: auto;
        height: auto;
        margin: auto auto;
        background: #EEEEEE;
        border-radius: 4px;
        box-shadow: 3px 4px 0px -1px rgba(0,0,0,.2);
        transition: all .5s ease-in-out;
    }

        .maindiv:hover {
            box-shadow: 6px 8px 0px -1px rgba(0,0,0,.2);
        }

    .left {
        width: 150px;
        height: auto;
        min-height: 100%;
        position: relative;
        border-radius: 4px;
        box-shadow: 3px 0px 0px 0px rgba(0,0,0,.12);
    }

        .left:hover {
            box-shadow: 5px 0px 0px 0px rgba(0,0,0,.12);
        }

    .right {
        padding: 40px 30px;
    }

    .login {
        width: 600px;
    }

    .userinput {
        border: none;
        border-bottom: solid 1px;
        border-bottom-color: rgba(0,0,0,.3);
        height: 30px;
        width: 60%;
        text-align: center;
        font-size: 20px;
        color: rgba(150,150,150,1);
        background: rgba(0,0,0,0);
        outline: none;
    }

    .userinput:focus {
        content: "";
        color: rgba(150,150,150,1);
        background: rgba(0,0,0,0);
    }

    .userinput:not(:placeholder-shown) ~ .customPlaceHolder {
        color: rgba(0,0,0,.7);
        -ms-transform: translateY(-300%);
        transform: translateY(-300%);
        font-size: 10px;
    }

    .customPlaceHolder {
        color: rgba(0,0,0,.5);
        font-size: 15px;
        position: absolute;
        -ms-transform: translateY(-100%);
        transform: translateY(-100%);
        transition: all .3s ease-in-out;
    }

    .button {
        width: auto;
        min-width: 100px;
        border-radius: 25px;
        text-align: center;
        padding: 10px;
        font-size: 15px;
        color: rgba(255,255,255,.5);
        box-shadow: 1px 2px 0px 0px rgba(0,0,0,.12);
        transition: all .3s ease;
        outline: 0;
        border: none;
        transition: all .2s ease-in-out;
    }

        .button:hover {
            transform: translateY(-3px);
            box-shadow: 3px 5px 0px 0px rgba(0,0,0,.12);
            color: rgba(255,255,255,.8);
        }

        .button:focus {
            transform: translateY(-3px);
            box-shadow: 3px 5px 0px 0px rgba(0,0,0,.12);
            color: rgba(255,255,255,.8);
        }

        .button:active {
            transform: translateY(0px);
            box-shadow: 1px 2px 0px 0px rgba(0,0,0,.12);
            transform: scale(.99);
        }

    .warning {
        color: rgba(255,0,0,.8);
    }
</style>

<div class="maindiv">
    <div class="left primary-background">
        <h4 class="CenteredH4">New Game</h4>
        <p class="extraContent">Enjoy!</p>
    </div>
    <div class="right">
        <div class="login">
            <h4>New_<span>Game</span></h4>
            <br />
            <p class="introduction">Please enter game details</p>
            <br />
            <br />
            @using (Html.BeginForm("startGameDetails", "Minesweeper", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-10" id="">
                        @Html.EditorFor(board => board.Size, new { htmlAttributes = new { @class = "form-control userinput", placeholder = " ", data_val_required = "Hello" } })
                        @Html.ValidationMessageFor(board => board.Size, "", new { @class = "warning" })
                        <label class="customPlaceHolder">Default Board size. Range: 5-20</label>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-md-10" id="">
                        @Html.EditorFor(board => board.Difficulty, new { htmlAttributes = new { @class = "form-control userinput", placeholder = " ", data_val_required = "Hello" } })
                        @Html.ValidationMessageFor(board => board.Difficulty, "", new { @class = "warning" })
                        <label class="customPlaceHolder"> 1=Easy,2=Medium,3=Hard. Default: Easy</label>
                    </div>
                </div>
                <input type="submit" value="Login" class="btn btn-default button primary-background" />
                <div>@Html.ActionLink("Go Back", "UserMainMenu")</div>

            }
        </div>
    </div>
</div>

