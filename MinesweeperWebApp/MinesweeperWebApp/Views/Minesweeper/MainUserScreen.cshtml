@model MinesweeperWebApp.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MainUserScreen</title>



    <style>
        * {
            font-family: Roboto;
        }

        .wrapper {
            display: flex;
            width: 100%;
        }

        #sidebar {
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            z-index: 999;
            transition: all 0.3s ease-in-out;
            background-color: #846DF2;
        }

            #sidebar .sidebar-header {
                padding: 20px;
                color: rgba(255,255,255,1);
                background-color: rgba(255,255,255,.2);
            }

        .customLink {
            z-index: 3;
            color: rgba(255,255,255,.8);
        }

        .startGame {
            margin: 0;
            top: 50%;
            left: 30%;
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
            position: absolute;
            background-color: rgba(0,0,0,.1);
            text-align: center;
            padding: 50px 0 ;
            max-width: 50%;
            min-width: 300px;
        }
    </style>

</head>
<body>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>Welcome, @Model.Username!</h3>
            </div>

        </nav>
        <div id="content">
            <div style="width: 100vw; height: 100vh; left: 250px; top: 0; background-color: rgba(255,255,255,.5); position: fixed;">
                <!-- Have setup game here-->
                <div class="startGame">
                    @Html.ActionLink("Start game", "startGame", new { htmlAttributes = new { @class = "form-control customLink" } })
                </div>
            </div>          
        </div>
    </div>
</body>
</html>
