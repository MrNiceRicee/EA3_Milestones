@model MinesweeperWebApp.Models.Board


<style>
    .flexbox-mines {
        display: flex;
        flex-wrap: wrap;
        background-color: rgba(0,0,255,.1);
        min-width: 100px;
    }

    .break-line{
        flex-basis:100%;
        height:0;
    }

    .customButton {
        width: 90px;
        height: 90px;
        background-color: rgba(0,0,0,.9);
        text-align: center;
        transition: all .2s ease-in-out;
        border: solid 1px;
        border-color: rgba(0,0,0,.5);
        margin: 2px;
        border-radius: 5px;
        color: rgba(255,255,255,.5);
        box-shadow: 1px 2px 0px 0px rgba(0,0,0,.12);
        outline: none;
    }

    .customButton:hover {
        background-color: rgba(255,255,255,.5);
        box-shadow: 3px 5px 0px 0px rgba(0,0,0,.12);
        color: rgba(0,0,0,.9);
        transform: translateY(-2px);
    }

    .customButton:active {
        transform: translateY(0px);
        box-shadow: 1px 2px 0px 0px rgba(0,0,0,.12);
        transform: scale(.99);
    }

    .Bomb {
        background-color: rgba(255,0,0,.5);
        width: 80%;
        height: 80%;
    }

    .FoundCell {
        background-color: rgba(0,0,0,.1);
        width: 80%;
        height: 80%;
    }
</style>

<style>
</style>

<div id="container" class="container-fluid">
    <br />
    <div class="row" style="width: 100%; margin-left: 33.3%;">
        @for (int y = 0; y < Model.Size; y++)
        {
            <div class="row">
                @for (int x = 0; x < Model.Size; x++)
                {
                    <div class="col pr-0 pl-0" style="flex-grow: 0; line-height: 0;">
                        <button type="submit" name="mine" id="@x-@y" value="@x,@y" class="btn-dark jquerySelector" style="height: 75px; width: 75px;">
                            @if (Model.getCell(x, y).Visited)
                            {
                                if (Model.getCell(x, y).Live)
                                {
                                    <span>OOF!</span>
                                    <script>
                                        $("#@x-@y").attr("class", "btn-danger");
                                    </script>
                                }
                                else
                                {
                                    if (@Model.getCell(x, y).LiveNeighbors == 0)
                                    {
                                        <span style="color: lawngreen">@Model.getCell(x, y).LiveNeighbors</span>
                                    }
                                    else if (@Model.getCell(x, y).LiveNeighbors == 1)
                                    {
                                        <span style="color: gold">@Model.getCell(x, y).LiveNeighbors</span>
                                    }
                                    else if (@Model.getCell(x, y).LiveNeighbors == 2)
                                    {
                                        <span style="color: darkorange">@Model.getCell(x, y).LiveNeighbors</span>
                                    }
                                    else if (@Model.getCell(x, y).LiveNeighbors >= 3)
                                    {
                                        <span style="color: orangered">@Model.getCell(x, y).LiveNeighbors</span>
                                    }
                                }
                            }
                            else
                            {
                                <span></span>
                            }
                        </button>
                    </div>
