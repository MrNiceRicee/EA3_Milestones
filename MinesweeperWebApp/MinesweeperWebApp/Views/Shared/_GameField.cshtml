                {
                    if (Model.getCell(x, y).Live)
                    {
                        <span class="Bomb">BOM</span>
                    }
                    else
                    {
                        <span class="FoundCell">ATSYMBOLModel.getCell(x, y).LiveNeighbors</span>
                    }
                }
                else
                {
                    <span></span>

                }
            </button>
